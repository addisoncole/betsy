<h1><%= @product.name.capitalize %></h1>

<section class="table">
<ul>
  <li>
    <%= @product.name %>
  </li>
  <li>
    <%= @product.category %>
  </li>
  <li>
    <%= @product.quantity %>
  </li>
  <li>
    <%= @product.price %>
  </li>
  <li>
    <%= image_tag ("#{@product.image}") %>
  <li>
    <%= link_to "Edit", edit_product_path(@product.id) %>
  </li>
  <li>
    <%= link_to "Delete", product_path, method: :delete, data: {confirm: "Delete  #{@product.name}?"}  %>
  </li>
</ul>
</section>

<%= button_to "Add to cart", product_cart_entries_path(product_id: @product)%>

<%= link_to "Back to Product List", products_path %>
<section>
  <%= form_with model: @review, :url => { :action => :review, :method => :post } do |f| %>
    <%= f.label :rating %>
    <%= f.select :rating, [*1..5] %>

    <%= f.label :comment %>
    <%= f.text_area :comment %>

    <%= f.submit "Submit" %>
  <% end %>
</section>


<section>
<h1>Reviews</h1>

<% @product.reviews.each do |review| %>

<ul>
  <li>
    Review title: <%= review.rating %>
  </li>
  <li>
    Username: <%= review.user_id %>
  </li>
  <li>
    Comments: <%= review.comment %>
  </li>
</ul>
<% end %>
</section>
